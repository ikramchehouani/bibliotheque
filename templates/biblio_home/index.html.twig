{% extends 'base.html.twig' %}

{#{% block title %}Bibliotheque Paris{% endblock %}#}

{% block body %}
<style>
    :root {
        /* Base font size */
        font-size: 10px;

        /* Heading height variable*/
        --heading-height: 30em;
    }

    body {
        font-family: "Roboto", Arial, sans-serif;
        min-height: 100vh;
        background-color: #101010;
    }

    header {
        position: fixed;
        width: 100%;
        height: var(--heading-height);
    }

    /* Create angled background with 'before' pseudo-element */
    header::before {
        content: "";
        display: block;
        position: absolute;
        left: 0;
        bottom: 6em;
        width: 100%;
        height: calc(var(--heading-height) + 10em);
        z-index: -1;
        transform: skewY(-3.5deg);
        background:
                linear-gradient(rgba(0,0,0,.6), rgba(0,0,0,.6)),
                url("media/wallpaper_home.webp") no-repeat center,
                linear-gradient(#4e4376, #2b5876);
        background-size: cover;
        border-bottom: .2em solid #fff;
    }

    h1 {
        font-size: calc(2.8em + 2.6vw);
        letter-spacing: .01em;
        padding: 10rem 0 0 4.5rem;
        color: #fff;
    }

    main {
        padding: calc(var(--heading-height) + 1.5vw) 4em 0;
    }

    #wallpaper_home_2{
        background-repeat: no-repeat;
        width: 100%;
    }

    #Go2_pages{
        position: sticky;
        right: 100px;
        bottom: 70px;
        padding: 0.60em 1.6em;
        border: 0.1em solid #000000;
        box-sizing: border-box;
        color: #ffffff;
        text-align: center;
        background-color: #303f2b;
        cursor: pointer;
        font-size: medium;
    }
    #Go2_pages:hover{
        color:#FFFFFF;
        border-color:#FFFFFF;
        /*font-weight: bold;*/
    }
    @media all and (max-width:30em){
        #Go2_pages{
            display:block;
            margin:0.4em auto;
            }
    }

</style>

    <header>
        <h1>Biblioth√®que Paris</h1>
    </header>

    <main>
        <img id="wallpaper_home_2" src="media/wallpaper_below.jpg" alt="antic books library">
        <button id="Go2_pages" onclick="window.location.href='/products'">Voir nos livres</button>
    </main>

{% endblock %}
